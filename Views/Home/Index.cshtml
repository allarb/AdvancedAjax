@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container text-center">
    <h1 class="display-3">Allari App</h1>
    <p class="lead">Welcome to the Allari App. Good luck!</p>
</div>

<style>

    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

        
        body > div.container, 
        body > div.container-fluid {
            min-height: 80vh; 
            display: flex;
            justify-content: center;
            align-items: center;
        }

  
    .welcome-container {
        background: rgba(255, 255, 255, 0.15);
        padding: 3rem 4rem;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        max-width: 600px;
    }

        .welcome-container h1 {
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .welcome-container p {
            font-size: 1.25rem;
        }
</style>
